<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>my cellar</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca&family=Lobster&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <section class="term-container container">
        <h2>edit term</h2>
        <section class="term">
         
            <ul class="term-list">
                <% mupaTerms.forEach(item => { %>
                    <% if(item._id == idTerm) { %>
                    <li class="term-list-item">
                        <form action="/edit/<%= item._id %>" method="POST">
                            <label for="term">Term</label>  
                            <input type="text" name="term" value="<%= item.term %>">
                            <label for="description">Description</label>
                            <input type="text" name="description" value="<%= item.description %>">
                            <button type="submit" class="confirm">Confirm</button>
                            <a href="/" class="cancel">Cancel</a>
                        </form>
                    </li>
                    <% } else { %>
                            <li class="term-list-item">
                                <div class="term-list-title">
                                    <%= item.term %>
                                </div>
                                <div class="term-list-content">
                                    <%= item.description %>
                                </div>
                               
                                <a href="/edit/<%= item._id %>" class="edit"><span class="fas fa-edit"></span></a>
                                <a href="/remove/<%= item._id %>" class="remove"><span class="fas fa-times"></span></a>
                            </li>
                            <% } %>
                            <% }) %>             
            </ul>
            </section>
            <a href="/" class="arrow"><i class="fas fa-solid fa-arrow-left fa-3x"></i></a>

            </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
</body>
</html>